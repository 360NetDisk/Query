page,
.page,
.page__bd {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.page__bd {
    padding-bottom: 0;
    flex-direction: column;
}

.table-detail-top {
    flex-direction:row;
    width: 100%;
    padding: 40rpx 40rpx;
    background-color: #fff;
}

.table-title {
    color: #739df4;
    display: block;
    font-size: 1rem;
    margin-left: 40rpx;
}
.table-time{
    float: left;
    margin-left: 40rpx;
}
.table-score{
    float:right;
    margin-right: 40rpx;
}

.table-detail-bg{
    flex-direction: row;
    width: 100%;
    background-color:#fff;
    margin-top: 20rpx;
}

.detail-top{
    padding: 20rpx 20rpx;
}

.blue-line{
    margin-left: 20rpx;
    width: 14rpx;
    height: 58rpx;
    vertical-align: middle;
}
.detail-title{
    font-size: 1rem;
    color: #739df4;
    margin-left: 20rpx;
}

.detail{
    padding: 40rpx 20rpx;
    border-top: 1px solid #f1f1f1;
}
.user-name{
    margin-left: 20rpx;
}

.detail-time{
    float: right;
    margin-right: 20rpx;
}