page {
  height: 100%;
  background-color: #f1f1f1;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.top {
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  background-color: #222;
  padding-top: 60rpx;
  color: #fff;
}

.top-arrow {
  width: 20rpx;
  height: 35rpx;
  vertical-align: middle;
  margin-left: 40rpx;
}

.top-back {
  vertical-align: middle;
  margin-left: 10rpx;
}

.top-title {
  vertical-align: middle;
  margin-top: 4rpx;
  margin-left: 155rpx;
}

.client-bg{
  width: 90%;
  height:190rpx;
  background-color: #fff;
  box-shadow: 1px 2px 2px 2px #ccc;
  margin-top: 40rpx;
}

.client-avatar{
  width: 130rpx;
  height: 130rpx;
  float: left;
  margin-top: 30rpx;
  margin-left: 30rpx;
}

.client-data {
  float: left;
  margin-top: 40rpx;
  margin-left: 30rpx;
}

.client-word {
  display: block;
  line-height: 1.5;
}

.client-call {
  width: 166rpx;
  height: 60rpx;
  float: right;
  margin-top: 70rpx;
  margin-right: 40rpx;
}