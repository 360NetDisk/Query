<view class="top">
  <image class='top-arrow' src='/images/icon/white-arrow.png'></image>
  <text class='top-back'>返回</text>
  <text class='top-title'>我的客户</text>
</view>

<view class="swiper-tab">
  <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">拜访商户</view>
  <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">拜访个体</view>
  <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">内部表单</view>
  <view class="swiper-tab-item {{currentTab==3?'active':''}}" data-current="3" bindtap="clickTab">外拓表单</view>
</view>

<swiper current="{{currentTab}}" duration="300" bindchange="swiperTab">
  <swiper-item>
    <view class='form-bg'>
      <view>
        <text></text>
        <text></text>
        <text></text>
      </view>
      <view></view>
    </view>
  </swiper-item>
  <swiper-item>
    <view>拜访个体</view>
  </swiper-item>
  <swiper-item>
    <view>内部表单</view>
  </swiper-item>
  <swiper-item>
    <view>外拓表单</view>
  </swiper-item>
</swiper>