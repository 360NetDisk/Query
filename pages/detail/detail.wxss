page {
  height: 100%;
  background-color: #f1f1f1;
}

.top {
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  background-color: #222;
  padding-top: 60rpx;
  color: #fff;
}

.top-arrow {
  width: 20rpx;
  height: 35rpx;
  vertical-align: middle;
  margin-left: 40rpx;
}

.top-back {
  vertical-align: middle;
  margin-left: 10rpx;
}

.top-title {
  vertical-align: middle;
  margin-top: 4rpx;
  margin-left: 155rpx;
}


.swiper-tab{
    width: 100%;
    border-bottom: 2rpx solid #ccc;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
}
.swiper-tab-item{
    width: 25%; 
    color:#434343;
    font-size: 14px;
}
.active{
    color:#739df4;
    border-bottom: 4rpx solid #739df4;
}
swiper{
  display: flex;
  flex-direction: column;
  align-items: center;
}