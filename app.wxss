@import '/style/my-weui.wxss';

page{
    background-color: #F1F1F1;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.top {
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  background-color: #222;
  padding-top: 60rpx;
  color: #fff;
  position: fixed;
}

.box{
  height: 160rpx;
}

.top-arrow {
  width: 20rpx;
  height: 35rpx;
  vertical-align: middle;
  margin-left: 40rpx;
}

.top-back {
  vertical-align: middle;
  margin-left: 10rpx;
}

.top-title {
  vertical-align: middle;
  margin-top: 4rpx;
  margin-left: 155rpx;
}